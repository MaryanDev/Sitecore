@using Glass.Mapper.Sc.Web.Mvc
@model SiteCoreTrainings.Data.Models.IAuthorsPage

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-md-push-3 text-center">
            <h3>@Html.Glass().Editable(x => x.Title)</h3>
            <table class="table table-responsive table-hover data-table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Date of birth</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var author in Model.AuthorsList)
                {
                    <tr>
                        <td><a href="@author.Url">@author.FullName</a></td>
                        <td>@author.DateOfBirth</td>
                    </tr>
                }
                </tbody>
            </table>
            @Html.Partial("Pagination/Pagination", Model.Pagination)
        </div>
    </div>
</div>
