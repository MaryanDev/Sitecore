@using Glass.Mapper.Sc.Web.Mvc
@model SiteCoreTrainings.Data.Models.HomePage
<div class="container" style="margin-top: -5%;">
    <div class="row">
        <div id="slider">
            @foreach (var sliderImage in Model.SliderImages)
            {
                <div>
                    <img src="@sliderImage.Src" style="width: 100%; height: 100%;" />
                </div>
            }
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <h2 class="text-center">@Html.Glass().Editable(hp => hp.PageHeader)</h2>
    </div>
    <div>
        <div>
            @if (!string.IsNullOrEmpty(Model.YoutubeVideo))
            {
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#videoCollapse">Watch Video</a>
                    </h4>
                </div>
                <div id="videoCollapse" class="panel-collapse collapse">
                    <iframe src="@Model.YoutubeVideo"></iframe>
                </div>
            }
            <script src="~/Scripts/mapConfig.js"></script>
            @if (Model.Address != null && Model.Address.Location != null)
            {
                <script>
                    var mapSettings = {
                        lat: @Model.Address.Location.Lattitude,
                        lng: @Model.Address.Location.Longittude
                    };
                </script>
                <div class="panel-heading">
                    <h4 class="panel-title" id="mapHeader">
                        <a data-toggle="collapse" href="#mapCollapse">Map Details</a>
                    </h4>
                </div>
                <div id="mapCollapse" class="panel-collapse collapse">
                    <div id="map" style=""></div>
                </div>
            }
        </div>
    </div>
</div>

