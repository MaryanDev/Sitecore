@using Sitecore.Mvc
@model SiteCoreTrainings.Models.ViewModels.Account.RegisterViewModel
<div class="container account-form">
    <div class="row">
        <div class="col-md-4 col-md-push-4 text-center">
            <h1>
                @Html.Sitecore().Field("Title")
            </h1>
            @Html.Sitecore().Field("Body")

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group row" >
                    @*@Html.LabelFor(m => m.UserName, new { @class = "col-md-5" })*@
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "User Name", @class="form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="form-group row" >
                    @*@Html.LabelFor(m => m.Password, new { @class = "col-md-5" })*@
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control input-lg"})
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group row" >
                    @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5" })*@
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
                @*<div class="form-group row">
                    @Html.CheckBox("RememberMe")
                    <label for="RememberMe" style="display: inline">RememberMe</label>
                </div>*@

                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-lg btn-block btn-primary btn-success" />
                </div>
            }
        </div>
    </div>
</div>
