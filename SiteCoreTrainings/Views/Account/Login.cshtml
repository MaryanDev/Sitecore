@using Sitecore.Mvc
@model SiteCoreTrainings.Models.ViewModels.Account.LoginViewModel
<div class="container account-form">
    <div class="row">
        <div class="col-md-4 col-md-push-4 text-center">
            <h1>
                @Html.Sitecore().Field("Title")
            </h1>
            @Html.Sitecore().Field("Body")

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group row">
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "User Name", @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="form-group row">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <input type="hidden" name="returnUrl", value="@ViewBag.returnUrl"/>

                <div class="form-group"><input type="submit" value="Log in" class="btn btn-lg btn-block btn-primary btn-success" /></div>
            }
        </div>
    </div>
</div>
